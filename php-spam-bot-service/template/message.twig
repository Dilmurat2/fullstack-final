{% extends "base.twig" %}

{% block body  %}
    <div style="max-width: 400px; margin: 50px auto; background-color: #f8f9fa; padding: 30px; border-radius: 15px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
        <h1 style="font-size: 2.5rem; color: #343a40; margin-bottom: 20px;">Заспамить</h1>

        {% if errors is not empty %}
            <div style="color: #dc3545; margin-bottom: 15px;">При сохранении произошла ошибка</div>
            <ul style="list-style-type: none; padding: 0;">
                {% for error in errors %}
                    <li style="color: #dc3545; margin-bottom: 8px;">
                        {{ error }}
                    </li>
                {% endfor %}
            </ul>
        {% endif %}

        <form action="/" method="post" style="margin-top: 20px;">
            <div style="margin-bottom: 20px;">
                <label style="display: block; margin-bottom: 10px; color: #495057; font-size: 1rem;">
                    Сообщение <span style="color: #dc3545; font-size: 1.2rem;">*</span>
                    <input type="text" name="message[message]" style="width: 100%; padding: 12px; border: 1px solid #ced4da; border-radius: 8px; box-sizing: border-box; font-size: 1rem;" value="{{ data.title ?? '' }}">
                </label>
                {% if errors.title %}
                    <div style="color: #dc3545; font-size: 0.9rem;">{{ errors.title }}</div>
                {% endif %}
            </div>

            <button type="submit" style="background-color: #007bff; color: #fff; padding: 12px 20px; border: none; border-radius: 8px; cursor: pointer; font-size: 1.1rem;">SPAM</button>
        </form>

        <p style="margin-top: 20px; font-size: 1rem; color: #6c757d;">
            <a href="/history" style="text-decoration: none; color: #007bff;">Просмотреть историю сообщений</a>
        </p>
    </div>
{% endblock %}
